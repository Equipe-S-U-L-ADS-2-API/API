<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE RSyntaxTheme SYSTEM "theme.dtd">

<!--
	Dark theme based off of Notepad++'s Obsidian theme.
	See theme.dtd and org.fife.ui.rsyntaxtextarea.Theme for more information.
-->
<RSyntaxTheme version="1.0">

   <!-- Fonte base inalterada -->
   <baseFont family="Consolas" size="16"/>

   <!-- Cores gerais ajustadas para dark -->
   <background color="3E4244"/>     <!-- fundo escuro -->
   <caret color="FF5555"/>          <!-- vermelho mais suave no dark -->
   <selection fg="default" useFG="false" bg="555555"/>  <!-- seleção cinza escuro -->
   <currentLineHighlight color="4E4530" fade="false"/>  <!-- destaque de linha atual -->
   <marginLine fg="555555"/>        <!-- linha de margem escura -->
   <markAllHighlight color="666600"/> 
   <markOccurrencesHighlight color="666666" border="false"/>
   <matchedBracket fg="CCCCCC" bg="555555" highlightBoth="true" animate="false"/>
   <hyperlinks fg="8888FF"/>
   <secondaryLanguages>
      <language index="1" bg="454545"/>
      <language index="2" bg="404040"/>
      <language index="3" bg="4A4A4A"/>
   </secondaryLanguages>

   <!-- Gutter -->
   <gutterBorder color="2E2E2E"/>
   <lineNumbers fg="AAAAAA" currentFG="FFFFFF"/>
   <foldIndicator fg="888888" armedFg="AAAAAA" iconBg="3E4244"/>
   <iconRowHeader activeLineRange="3399ff"/>

   <!-- Tokens (mantidos quase iguais, com fg claros) -->
   <tokenStyles>
      <style token="IDENTIFIER" fg="DDDDDD"/>
      <style token="RESERVED_WORD" fg="56B6C2" bold="true"/>
      <style token="RESERVED_WORD_2" fg="56B6C2" bold="true"/>
      <style token="ANNOTATION" fg="777777"/>
      <style token="COMMENT_DOCUMENTATION" fg="777777" italic="true"/>
      <style token="COMMENT_EOL" fg="777777" italic="true"/>
      <style token="COMMENT_MULTILINE" fg="777777" italic="true"/>
      <style token="COMMENT_KEYWORD" fg="E6C07B" bold="true"/>
      <style token="COMMENT_MARKUP" fg="777777"/>
      <style token="DATA_TYPE" fg="C678DD" bold="true"/>
      <style token="FUNCTION" fg="61AFEF"/>
      <style token="LITERAL_BOOLEAN" fg="98C379" bold="true"/>
      <style token="LITERAL_NUMBER_DECIMAL_INT" fg="D19A66"/>
      <style token="LITERAL_NUMBER_FLOAT" fg="D19A66"/>
      <style token="LITERAL_NUMBER_HEXADECIMAL" fg="D19A66"/>
      <style token="LITERAL_STRING_DOUBLE_QUOTE" fg="98C379"/>
      <style token="LITERAL_CHAR" fg="98C379"/>
      <style token="LITERAL_BACKQUOTE" fg="98C379"/>
      <style token="MARKUP_TAG_DELIMITER" fg="E06C75"/>
      <style token="MARKUP_TAG_NAME" fg="E06C75"/>
      <style token="MARKUP_TAG_ATTRIBUTE" fg="61AFEF"/>
      <style token="MARKUP_TAG_ATTRIBUTE_VALUE" fg="98C379"/>
      <style token="MARKUP_COMMENT" fg="777777" italic="true"/>
      <style token="MARKUP_DTD" fg="C678DD"/>
      <style token="MARKUP_PROCESSING_INSTRUCTION" fg="777777"/>
      <style token="MARKUP_CDATA" fg="E5C07B"/>
      <style token="MARKUP_CDATA_DELIMITER" fg="56B6C2"/>
      <style token="MARKUP_ENTITY_REFERENCE" fg="56B6C2"/>
      <style token="OPERATOR" fg="E06C75"/>
      <style token="PREPROCESSOR" fg="777777"/>
      <style token="REGEX" fg="56B6C2"/>
      <style token="SEPARATOR" fg="E06C75"/>
      <style token="VARIABLE" fg="E06C75" bold="true"/>
      <style token="WHITESPACE" fg="3E4244"/>

      <!-- Erros -->
      <style token="ERROR_IDENTIFIER" fg="FFFFFF" bg="660000"/>
      <style token="ERROR_NUMBER_FORMAT" fg="FFFFFF" bg="660000"/>
      <style token="ERROR_STRING_DOUBLE" fg="FFFFFF" bg="660000"/>
      <style token="ERROR_CHAR" fg="FFFFFF" bg="660000"/>
   </tokenStyles>

</RSyntaxTheme>
